generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum UserRole {
  ADMIN
  STAFF
  USER
  GATE_OPERATOR
}

enum EventStatus {
  UPCOMING
  ONGOING
  COMPLETED
  CANCELLED
}

enum TicketStatus {
  ACTIVE
  USED
  CANCELLED
  EXPIRED
}

enum OrderStatus {
  PENDING
  PAID
  CANCELLED
  REFUNDED
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  password      String?  // For credential-based auth
  name          String?
  phone         String?
  role          UserRole @default(USER)
  emailVerified DateTime? // For email verification
  image         String?   // For OAuth providers
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  orders        Order[]
  tickets       Ticket[]
  gateScans     GateScan[]
  accounts      Account[]
  sessions      Session[]

  @@map("users")
}

model Event {
  id              String         @id @default(cuid())
  title           String
  description     String
  venue           String
  address         String
  startDate       DateTime
  endDate         DateTime
  maxCapacity     Int
  currentCapacity Int            @default(0)
  status          EventStatus    @default(UPCOMING)
  imageUrl        String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  
  // Relations
  ticketTypes     TicketType[]
  orders          Order[]
  tickets         Ticket[]
  gateEntries     GateEntry[]
  
  @@map("events")
}

model TicketType {
  id              String     @id @default(cuid())
  eventId         String
  name            String
  description     String?
  price           Float
  maxQuantity     Int
  soldQuantity    Int        @default(0)
  isValid         Boolean    @default(true)
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  
  // Relations
  event           Event      @relation(fields: [eventId], references: [id], onDelete: Cascade)
  orderItems      OrderItem[]
  tickets         Ticket[]
  
  @@map("ticket_types")
}

model Order {
  id                    String       @id @default(cuid())
  userId                String
  eventId               String
  totalAmount           Float
  status                OrderStatus  @default(PENDING)
  paymentMethod         String?
  paymentId             String?
  midtransTransactionId String?      // Midtrans transaction ID
  midtransSnapToken     String?      // Midtrans Snap token
  paymentUrl            String?      // Payment page URL
  paidAt                DateTime?    // Payment timestamp
  expiresAt             DateTime?    // Payment expiry
  createdAt             DateTime     @default(now())
  updatedAt             DateTime     @updatedAt

  // Relations
  user                  User         @relation(fields: [userId], references: [id])
  event                 Event        @relation(fields: [eventId], references: [id])
  items                 OrderItem[]
  tickets               Ticket[]

  @@map("orders")
}

model OrderItem {
  id              String   @id @default(cuid())
  orderId         String
  ticketTypeId    String
  quantity        Int
  unitPrice       Float
  totalPrice      Float
  
  // Relations
  order           Order       @relation(fields: [orderId], references: [id], onDelete: Cascade)
  ticketType      TicketType  @relation(fields: [ticketTypeId], references: [id])
  
  @@map("order_items")
}

model Ticket {
  id              String       @id @default(cuid())
  userId          String
  orderId         String
  ticketTypeId    String
  eventId         String
  qrCode          String       @unique
  status          TicketStatus @default(ACTIVE)
  scannedAt       DateTime?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  
  // Relations
  user            User         @relation(fields: [userId], references: [id])
  order           Order        @relation(fields: [orderId], references: [id])
  ticketType      TicketType   @relation(fields: [ticketTypeId], references: [id])
  event           Event        @relation(fields: [eventId], references: [id])
  gateScans       GateScan[]
  
  @@map("tickets")
}

model GateEntry {
  id              String   @id @default(cuid())
  eventId         String
  name            String
  location        String?
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  event           Event    @relation(fields: [eventId], references: [id])
  gateScans       GateScan[]
  
  @@map("gate_entries")
}

model GateScan {
  id              String   @id @default(cuid())
  ticketId        String
  gateEntryId     String
  scannedBy       String?
  scanTime        DateTime @default(now())
  isValid         Boolean  @default(true)
  notes           String?
  
  // Relations
  ticket          Ticket   @relation(fields: [ticketId], references: [id])
  gateEntry       GateEntry @relation(fields: [gateEntryId], references: [id])
  user            User?    @relation(fields: [scannedBy], references: [id])
  
  @@map("gate_scans")
}

model HeroSlide {
  id        String   @id @default(cuid())
  title     String
  subtitle  String?
  imageUrl  String
  ctaLabel  String?
  ctaLink   String?
  sortOrder Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("hero_slides")
  @@index([isActive, sortOrder])
}

// NextAuth.js Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}